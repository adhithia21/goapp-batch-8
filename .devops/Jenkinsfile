pipeline {
    agent {
        label 'docker'
    }

    stages {
        stage('Build') {
            steps {
                echo 'Build/compile application'
                sh 'docker build -t adhithia21/goapp:${BUILD_NUMBER} .'
                sh 'docker push adhithia21/goapp:${BUILD_NUMBER}'
            }
        }
        stage('Test') {
            steps {
                echo 'Test run application'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploy to server'
            }
        }
    }
    post { 
        always { 
            cleanWs()
        }
    }
}

